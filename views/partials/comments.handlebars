<div class="comments">
    {{#each this}}
    <section class="comment">
        <div class="commenter">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div id="editable-comment" contentEditable="true">
            {{comment_text}}
        </div>
        <button type='submit' class="comment-save">Save Changes</button>

    </section>
    {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/comment-edit.js"></script>
{{/if}}